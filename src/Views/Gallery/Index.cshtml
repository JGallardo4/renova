@using Renova.Models.Gallery

@model IEnumerable<Project>

@section Style {
	<link rel="stylesheet"
		href="/css/pages/gallery.css" />
}

@{
	ViewData["Title"] = "Gallery";
	ViewData["Description"] = 
		"Check out the transformations made possible during our past projects.";
}

@foreach (var project in Model)
{
	<h1>@project.Name</h1>

	<div class="image-grid">
		@foreach (var imageName in project.Images)
		{
			var imageUrl = project.Directory + imageName;

			<img src=@imageUrl />	
		}
	</div>	
}