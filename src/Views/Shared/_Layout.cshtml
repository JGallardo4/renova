		<div id="contact-info">
			<a id="brand" asp-area="" asp-controller="Home" asp-action="Index">Renova</a>

			<ul>			
				<li>
					<i class="fa fa-phone" aria-hidden="true"></i>
					
					<a href="1-587-990-4692">+1-587-990-4692</a>
				</li>

				<li>
					<i class="fa fa-envelope-o" aria-hidden="true"></i>

